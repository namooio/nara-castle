# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index
GET     /                            controllers.Assets.at(path="/public/dist", file="index.html")

# Map static resources from the /public folder to the /assets URL path
GET     /resources/*file             controllers.Assets.at(path="/public/dist", file)

POST    /castle-api/castles                                     nara.castle.sp.play.CastleResource.buildCastle()
PUT     /castle-api/castellans/:castellanId                     nara.castle.sp.play.CastleResource.modifyCastellan(castellanId:String)
POST    /castle-api/castellans/:castellanId/enrollments         nara.castle.sp.play.CastleResource.addEnrollment(castellanId:String)
PUT     /castle-api/castellans/:castellanId/withdrawal          nara.castle.sp.play.CastleResource.withdrawMetro(castellanId:String)
DELETE  /castle-api/castles/:castellanId                        nara.castle.sp.play.CastleResource.demolishCastle(castellanId:String)

GET     /castle-api/castellans/:castellanId                     nara.castle.sp.play.CastleResource.findCastellan(castellanId:String)
GET     /castle-api/castellans                                  nara.castle.sp.play.CastleResource.findCastellans()
GET     /castle-api/castellans-page                             nara.castle.sp.play.CastleResource.findCastellansPage()
GET     /castle-api/castellans/:castellanId/exists              nara.castle.sp.play.CastleResource.existsCastellan(castellanId:String)
GET     /castle-api/castellans/:castellanId/enrollments         nara.castle.sp.play.CastleResource.findEnrollments(castellanId:String)
GET     /castle-api/unitplates                                  nara.castle.sp.play.CastleResource.findUnitPlates()

GET     /castle-api/castellans/:castellanId/enrollments/metros/:metroId/exists  nara.castle.sp.play.CastleResource.checkEnrolled(castellanId:String, metroId:String)

