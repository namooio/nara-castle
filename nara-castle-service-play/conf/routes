# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index
GET     /                            controllers.Assets.at(path="/public/dist", file="index.html")

# Map static resources from the /public folder to the /assets URL path
GET     /resources/*file             controllers.Assets.at(path="/public/dist", file)

GET     /castles                     namoo.nara.castle.sp.play.CastleResource.findAllCastles()
GET     /castles/email/:email        namoo.nara.castle.sp.play.CastleResource.findCastleByEmail(email:String)
GET     /castles/:castleId           namoo.nara.castle.sp.play.CastleResource.findCastle(castleId:String)
